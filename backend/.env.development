# Email/SMTP configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@example.com
# InventoryApp Backend - DEVELOPMENT Environment
# This file is for LOCAL DEVELOPMENT ONLY
# For production deployment, see .env.example

# Application Environment
FLASK_ENV=development
FLASK_APP=main.py
FLASK_DEBUG=1

# Security Keys (DEVELOPMENT ONLY - NOT SECURE FOR PRODUCTION!)
SECRET_KEY=dev-secret-key-local-only-not-for-production-use
JWT_SECRET_KEY=dev-jwt-secret-key-local-only-not-for-production

# Database (PostgreSQL for both development and production)
# Default credentials for local PostgreSQL installation
# Change the password after installing PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/inventoryapp

# CORS (Allow both common Vite ports)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5137

# Server
PORT=5000

# Logging
LOG_LEVEL=DEBUG

# Rate Limiting (more permissive for development)
RATE_LIMIT_LOGIN=100 per minute
RATE_LIMIT_REGISTER=100 per hour
RATE_LIMIT_DEFAULT=1000 per minute
